<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.MicrosoftRewardsBot" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/microsoft_blue</item>
        <item name="colorPrimaryVariant">@color/microsoft_blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/microsoft_green</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Material You colors for dark theme -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background</item>
        <!-- Status bar color for dark theme -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <style name="FloatingButtonTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- Dark theme colors for Material Components -->
        <item name="colorPrimary">@color/microsoft_blue</item>
        <item name="colorPrimaryVariant">@color/microsoft_blue_dark</item>
        <item name="colorSecondary">@color/microsoft_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>