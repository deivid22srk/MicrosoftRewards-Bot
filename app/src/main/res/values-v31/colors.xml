<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material You dynamic colors for Android 12+ -->
    <!-- These will use the system's wallpaper-based colors -->
    
    <!-- Primary colors from system -->
    <color name="microsoft_blue">@android:color/system_accent1_600</color>
    <color name="microsoft_blue_dark">@android:color/system_accent1_700</color>
    
    <!-- Secondary colors maintaining brand identity but using dynamic accents -->
    <color name="microsoft_green">@android:color/system_accent2_600</color>
    
    <!-- Surface colors -->
    <color name="background_light">@android:color/system_neutral1_50</color>
    <color name="surface_light">@android:color/system_neutral1_50</color>
    <color name="surface_container">@android:color/system_neutral1_100</color>
    <color name="surface_container_high">@android:color/system_neutral1_200</color>
    <color name="surface_container_highest">@android:color/system_neutral1_300</color>
    
    <!-- Primary container colors -->
    <color name="colorPrimaryContainer">@android:color/system_accent1_100</color>
    <color name="colorOnPrimaryContainer">@android:color/system_accent1_900</color>
    
    <!-- Secondary container colors -->
    <color name="colorSecondaryContainer">@android:color/system_accent2_100</color>
    <color name="colorOnSecondaryContainer">@android:color/system_accent2_900</color>
    
    <!-- Tertiary container colors -->
    <color name="colorTertiaryContainer">@android:color/system_accent3_100</color>
    <color name="colorOnTertiaryContainer">@android:color/system_accent3_900</color>
    
    <!-- Text colors -->
    <color name="on_background">@android:color/system_neutral1_900</color>
    <color name="on_surface">@android:color/system_neutral1_900</color>
    
    <!-- Outline colors -->
    <color name="colorOutline">@android:color/system_neutral2_500</color>
    <color name="colorOutlineVariant">@android:color/system_neutral2_300</color>
    <color name="colorOnSurfaceVariant">@android:color/system_neutral2_700</color>
    <color name="colorSurfaceVariant">@android:color/system_neutral2_100</color>
</resources>