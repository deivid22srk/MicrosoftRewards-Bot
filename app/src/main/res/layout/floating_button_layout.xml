<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:background="@drawable/floating_background">

    <!-- Container para ícone principal e progress bar -->
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp">

        <!-- Ícone principal do app -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/floatingIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/floating_icon_background"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <!-- Progress bar circular -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/floatingProgressBar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            app:indicatorSize="56dp"
            app:trackThickness="4dp"
            app:indicatorColor="@color/microsoft_green"
            app:trackColor="@android:color/transparent"
            app:trackCornerRadius="2dp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Texto de progresso -->
    <TextView
        android:id="@+id/floatingProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0/30"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/progress_text_background"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp" />

    <!-- Container para botões de controle -->
    <LinearLayout
        android:id="@+id/controlButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <!-- Botão de pause/play -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pausePlayButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_pause"
            android:background="@drawable/floating_icon_background"
            android:padding="6dp"
            android:layout_marginHorizontal="2dp"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:tint="@color/white" />

        <!-- Botão de stop -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/stopButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_stop"
            android:background="@drawable/floating_icon_background"
            android:padding="6dp"
            android:layout_marginHorizontal="2dp"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:tint="@color/microsoft_red" />

    </LinearLayout>

</LinearLayout>