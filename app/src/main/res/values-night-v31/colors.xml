<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material You dynamic colors for Android 12+ Dark Theme -->
    <!-- These will use the system's wallpaper-based colors in dark mode -->
    
    <!-- Primary colors from system -->
    <color name="microsoft_blue">@android:color/system_accent1_200</color>
    <color name="microsoft_blue_dark">@android:color/system_accent1_300</color>
    
    <!-- Secondary colors maintaining brand identity but using dynamic accents -->
    <color name="microsoft_green">@android:color/system_accent2_200</color>
    
    <!-- Surface colors for dark theme -->
    <color name="background_light">@android:color/system_neutral1_900</color>
    <color name="surface_light">@android:color/system_neutral1_900</color>
    <color name="surface_container">@android:color/system_neutral1_800</color>
    <color name="surface_container_high">@android:color/system_neutral1_700</color>
    <color name="surface_container_highest">@android:color/system_neutral1_600</color>
    
    <!-- Primary container colors for dark theme -->
    <color name="colorPrimaryContainer">@android:color/system_accent1_700</color>
    <color name="colorOnPrimaryContainer">@android:color/system_accent1_100</color>
    
    <!-- Secondary container colors for dark theme -->
    <color name="colorSecondaryContainer">@android:color/system_accent2_700</color>
    <color name="colorOnSecondaryContainer">@android:color/system_accent2_100</color>
    
    <!-- Tertiary container colors for dark theme -->
    <color name="colorTertiaryContainer">@android:color/system_accent3_700</color>
    <color name="colorOnTertiaryContainer">@android:color/system_accent3_100</color>
    
    <!-- Text colors for dark theme -->
    <color name="on_background">@android:color/system_neutral1_100</color>
    <color name="on_surface">@android:color/system_neutral1_100</color>
    
    <!-- Outline colors for dark theme -->
    <color name="colorOutline">@android:color/system_neutral2_400</color>
    <color name="colorOutlineVariant">@android:color/system_neutral2_600</color>
    <color name="colorOnSurfaceVariant">@android:color/system_neutral2_200</color>
    <color name="colorSurfaceVariant">@android:color/system_neutral2_800</color>
</resources>