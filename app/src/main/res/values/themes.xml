<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with proper Material You support. -->
    <style name="Theme.MicrosoftRewardsBot" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/microsoft_blue</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/microsoft_green</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/microsoft_orange</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/colorTertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/colorOnTertiaryContainer</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Surface container colors for Material You -->
        <item name="colorSurfaceContainer">@color/surface_container</item>
        <item name="colorSurfaceContainerHigh">@color/surface_container_high</item>
        <item name="colorSurfaceContainerHighest">@color/surface_container_highest</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorOutlineVariant">@color/colorOutlineVariant</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorErrorContainer">@color/colorErrorContainer</item>
        <item name="colorOnErrorContainer">@color/colorOnErrorContainer</item>
        
        <!-- System UI -->
        <item name="android:statusBarColor">@color/surface_container</item>
        <item name="android:navigationBarColor">@color/surface_container</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Legacy support -->
        <item name="colorPrimaryVariant">@color/microsoft_blue_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
    </style>
    
    <style name="FloatingButtonTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        
        <!-- Material 3 colors for floating components -->
        <item name="colorPrimary">@color/microsoft_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
        <item name="colorSecondary">@color/microsoft_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorOutlineVariant">@color/colorOutlineVariant</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorErrorContainer">@color/colorErrorContainer</item>
        <item name="colorOnErrorContainer">@color/colorOnErrorContainer</item>
        
        <!-- Legacy support -->
        <item name="colorPrimaryVariant">@color/microsoft_blue_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        
        <!-- Text colors para compatibilidade -->
        <item name="android:textColorPrimary">@color/on_surface</item>
        <item name="android:textColorSecondary">@color/colorOnSurfaceVariant</item>
    </style>
</resources>